<Window x:Class="DesktopSbS.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopSbS"
        mc:Ignorable="d"
      Title="ThumbWindows"
        Topmost="True" ShowInTaskbar="False" 
        WindowStyle="None" ResizeMode="NoResize" Background="Transparent"
        AllowsTransparency="True"
        IsHitTestVisible="False">
    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="DebugText" FontSize="32" Foreground="Red" FontWeight="Bold"/>
</Window>
